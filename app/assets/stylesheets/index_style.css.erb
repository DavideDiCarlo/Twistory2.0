
img,p.center
{
	margin-left:auto;
	margin-right:auto;
}

html
{
	font-size:62.5%;
	height:100%;
	width:100%;
}

body
{
	height:100%;
	width:100%;
	font-size:1em;
	margin:0;
	padding:0;
	background-image:none !important;
	background-color:white;
	font-family: verdana, arial, helvetica, sans-serif;
}

.navigation
{
	display:none;
}

/* BAR LINK*/

a:link
{
	text-decoration:none;
	color:#efefef;
}

a:before
{
	text-decoration:none;
}

a:active
{
	text-decoration:none;
	color:#698888;
}

a:hover
{
	text-decoration:underline;
}

a:after
{
	text-decoration:none;
}

.bar #link
{
	position:relative;
	float:right;
	right:0%;
	padding:2.2em 0em 0 0;
	opacity: 1;
	font-size:1.6em;
	color:#696666;
}

#link a 
{
	text-decoration:none !important;
	color:#696666 !important;
}

#link ul
{
	list-style-type:none;
	padding:0;
	margin:0;
}

#link li
{
	float:left;
	padding:0em 1em 0em 1em;
}

#link a
{
	color:#696666 !important;
}

#link a:hover
{
	text-decoration:underline !important;
	color:#959695 !important;
}

#link a:active
{
	text-decoration:underline !important; 
	color:#D5DBD6 !important;
}

/* BAR */
.bar
{
	background:#fff;
	width:100%;
}

.bar img
{
	margin:1em 5em 0.6em 0.6em;
	float:right;
	max-width:6.4em;
}

.no-pointer
{
	pointer-events: none;
}

.bar h2
{
	float:left;
	position:relative;
	margin-left:1em;
	margin-right:auto;
	font-size:3em;
	font-weight:300;
	color: #000;
	font-family:'Open Sans', sans-serif;
}

/* CENTRAL IMAGE */

.central
{
	width:100%;
	height:70em;
	display:inline-block;
	background: #fff url("<%= asset_path 'img154.jpg' %>") no-repeat;
	background-size:100% 100%;

}

.csizer
{
	height:100%;
}

.central img
{
	opacity:1;
	max-width:10em;
	cursor:pointer;
	position:relative;
	display:block;
}

.central #first
{
	margin-top: 1em;
	left: 48%;
	opacity:1;
	position: relative;
	max-width: 50%;
}

#text6
{
	opacity:1;
	position:relative;
	color:#fff;
	font-size:1.2em;
	text-align:center;
	padding:1em 0 5em 0;
}

.central #second
{
	padding: 1em 1em;
	position: relative;  
	left: 0;
	opacity: 1;
	display: block;  
	max-width: 48%;
}

#content1
{
	padding-top:7em;
	position:relative;
}

#first p, h3
{
	color:#fff;
	font-size:1.8em;
	font-weight:100;
	text-align:center;
}

#second p, h3
{
	color:#fff;
	font-size:1.8em;
	font-weight:100;
	text-align:center;
}

/* LATEST FEEDS */
#content2
{
	position:absolute;
	float:left;
	left:-125em;
	opacity:0;
	width:90%;
	margin-top:-40em;
}

#content2 h2
{
	font-size:1.5em;
	color:#fff;
	text-align:right;
	margin-right:10%;
}

#content2 p
{
	width:60%;
	font-size:2em;
	color:#fff;
	margin: 0 auto 0 auto;
	text-align:center;
}

/* INFORMATION */
/* TECH */

.tecnologia
{
	background:url("<%= asset_path 'technology.png' %>") no-repeat left;
	background-size:65% 100%;
	margin:7em 0 7em 0;
	width:100%; 
	height:30em;
}

#technoimg
{
	width:65%;
	height:100%;
}

#technotext
{
	position:relative;
	height:90%;
	float:right;
	right:8%;
	width:32%;
	padding-bottom:2em;
}

/* GENERAL INFORMATION */
.italy
{
	margin:0 0 7em 0;
	width:100%; 
	height:30em;
	background:url("<%= asset_path 'storia.png' %>") no-repeat right;
	background-size:68% 100%;
}

#italytext
{
	position:relative;
	height:95%;
	width:33%;
	left:4%;
	margin-top:-0.5%;
}

.italy-2
{
	background:url("<%= asset_path 'storia-2.png' %>") no-repeat left;
	background-size:65% 100%;
	margin:5em 0 7em 0;
	width:100%; 
	height:30em;
}

#italytext2
{
	float:right;
	position:relative;
	right:4%;
	width:36%;
	height:95%;
	padding-top:0;
}

/* TEAM */
.who
{
	margin-top:5em;
	padding:0em 0em 0em 0em;
	text-align:center;
	display:inline-block; 
	background-color:#FAF8F7;
	width:100%;
	border-top:1px solid #efefef;
}

.member
{
	width:20%;
	display:block;
	text-align:center;
	font-family: 'Open Sans', sans-serif;
	margin:0 4.5em 3.5em 0;
	float:left;
}

.member img
{
	width:14.5em;
	height:14.5em;
	border-radius: 50%;
	-webkit-border-radius: 50%;
	-o-border-radius: 50%;
	-moz-border-radius: 50%;
}

.who h3
{
	font-size:3.8em;
	font-family: 'Ubuntu', sans-serif;
	color:#696666;
}

.member h2
{
	font-size:1.8em;
	color:#2A91EB;
}

.member h4
{
	font-size: 1.5em;
	color:#4E525D;
}

.member p
{
	font-size:1.5em;
	color:#414A5A;
}

/* CHI SIAMO end */

.credits
{
	width:100%;
	background-color:#E0E0E0;
	font-size:1em;
	padding-bottom:4em;
	color:#698888;
	font-family: 'Ubuntu' , sans-serif;
	border-top:1px solid #efefef;
}

#left_ftext
{
	display:inline-block;
	width:25%;
	position:relative;
	margin:3em 0 1em 5%;
	padding-right:4em;
	text-align:left;
	border-right:1px solid rgba(180,164,152,0.5);
}

#connect
{
	display:inline-block;
	position:relative;
	left:5%;
}

#central_ftext
{
	color:#696666;
	font-size:1.2em;
	font-family: 'Open sans', sans-serif;
}

#connect img
{
	width:3.2em;
	height:3.2em;
}

#connect img:hover
{
	border-bottom:1px solid #698888;
}

#flogo
{
	width:26.3em;
	height:15em;
	position:absolute;
	margin-top:-13em;
	right:10%;
}



.liceoscientifico
{
	display:table;
