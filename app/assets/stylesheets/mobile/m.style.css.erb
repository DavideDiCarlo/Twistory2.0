#menu   
{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 7%;

	font-size: 1.3em;
	font-family: Tahoma, Geneva, sans-serif;
	font-weight: bold;

	background-color: #feffff; 
}

#logo
{
	width: 20%;
	text-align: left;

	background-image: url("<%= asset_path 'logo.png' %>");
	background-repeat: no-repeat;
	background-size: contain;
}

#menu a
{
	margin-right: 1%;
}

#activeButton
{
	color: white;
	border: 1px solid rgba(0, 80, 100, 0.5);
	border-radius: 5px;
	background-color: rgba(105, 180, 200, 0.75);
	padding: 0.5% 1%;
}

/*** END HEADER ***/
/*** MAIN CONTAINER ***/

.container
{
	position: fixed;
	top: 7%;
	left: 0;
	width: 100%;
	height: 93%;

	margin: 0 0;
	padding: 0 0;

	border-top: 1px solid rgba(80, 80, 100, 0.4);

	overflow-y: scroll;
	overflow-x: hidden;
}

.groundSheet
{
	margin: 0.8% 4%;
	padding: 3% 0;

	background-color: #FEFFFF;

	border: 1px solid rgba(80, 80, 100, 0.40); 
	border-radius: 3px;
	/*border: 1px solid red; /* debug red */
}

/*** END MAIN CONTAINER ***/

.button 
{
	margin: 2% 0;
	padding: 1% 2%;
	display: inline-block;

	font-size: 1.5em;
	font-weight: bold;
	color: white;

	border: 1px solid rgba(0, 50, 80, 0.5);
	border-radius: 4px;
	background-color: rgba(125, 170, 180, 1);

	box-shadow: inset 1px 1px 1px rgba(0, 20, 50, 0.35);
	-moz-box-shadow: inset 1px 1px 1px rgba(0, 20, 50, 0.35);
	-webkit-box-shadow: inset 1px 1px 1px rgba(0, 20, 50, 0.35);

	cursor: pointer;
}

.field
{
	margin: 0.5%;
	padding: 1%;

	width: 95%;

	border: 1px solid rgba(80, 80, 100, 0.40);    
	border-radius: 3px; 

	font-size: 1.3em;
	font-weight: bold;
	text-align: center;

	cursor: pointer;
}

.blueNotesSheet
{
	margin: 2% 1.5%;
	padding: 0.5%;

	background-color: rgba(120, 170, 200, 0.15);
	border: 1px solid rgba(120, 170, 200, 0.2);
	border-radius: 5px;
}

