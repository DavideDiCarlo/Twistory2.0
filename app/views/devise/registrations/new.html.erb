
    <title>Iscriviti</title>
  </head>
  
  <body>
  
    <table id="menu">
      </tr>
        <th id="logo">
          <a href="<%= @current_host %>"></a>
        </th>
        <th align="right">
          <a href="<%= @current_host %>" name="Hlink">Home</a>
          <a href="<%= new_user_session_path %>">Accedi</a>
          <a href="<%= new_user_registration_path %>" id="activeButton">Iscriviti</a>
        </th>
      </tr>
    </table>
    
    <div class="container">
	  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  	    
	    <div class="loginForm">
	      <div class="homeTitle">
          Iscriviti
        </div>
        
        <% if notice %>
          <p align="center"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p align="center"><%= alert %></p>
        <% end %>
        
	      <%= devise_error_messages! %>
	      
		    <ul>  
		      <li>
		        <%= f.text_field :user_name, autofocus: "true", :class => "field", :placeholder => " Nome Pubblico" %>
		      </li>
		      <li>
		      <%= f.email_field :email, :class => "field", :placeholder => " Indirizzo e-mail"  %>
		      </li>
		      <li>
		      <%= f.password_field :password, :class => "field", :placeholder => " Password" , autocomplete: "off" %>
		      </li>
		      <li>
		      <%= f.password_field :password_confirmation, :class => "field", :placeholder => " Conferma password" , autocomplete: "off" %>
		      </li> 
		    </ul>

		    <div class="footer">
		    	<div style="margin: 0 0 2.5% 0; padding: 0; font-weight: bold;">
		    	  Ti invieremo una e-mail di conferma
		    	</div>
		      <%= f.submit "Procedi", :class => "button" %>
		    </div>
      </div> 
         
    <% end %>    
    </div>
  </body>
  
</html>
