
    <title>Accedi</title>   
  </head>
  
  <body>
    
    <table id="menu">
      </tr>
        <th id="logo">
          <a href="<%= @current_host %>"></a>
        </th>
        <th align="right">
          <a href="<%= @current_host %>" name="Hlink">Home</a>
          <a href="<%= new_user_session_path %>" id="activeButton">Accedi</a>
          <a href="<%= new_user_registration_path %>">Iscriviti</a>
        </th>
      </tr>
    </table>
    
    <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
	    <div class="loginForm">
	      <div class="homeTitle">
	        Accedi
	      </div>
        
        <% if notice %>
          <div align="center" style="margin: 1% 0 0.5% 0;"><%= notice %></div>
        <% end %>
        <% if alert %>
          <div align="center" style="margin: 1% 0 0.5% 0;"><%= alert %></div>
        <% end %>
        	      
		    <ul>  
		      <li>
		      <%= f.email_field :email, autofocus: "true", :class => "field", :placeholder => " Indirizzo e-mail" %>
		      </li>
		      <li>
		      <%= f.password_field :password, :class => "field", :placeholder => " Password" , autocomplete: "off" %>
		      </li>
		    </ul>
		    
		    <p align="center">
		      <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me, :style => "cursor: pointer;" %><b>Rimani collegato</b>
          <% end %>
        </p>
		    
		    <div class="footer">
		      <div><%= f.submit "Accedi", :class => "button" %></div>
		      <p style="text-decoration: underline;"><%= link_to "Dimenticato la password?", new_password_path(resource_name) %></p>
		    </div>
		  </div>
                
    <% end %>  
    </div>    
  </body>
	
</html>
