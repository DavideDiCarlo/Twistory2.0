<%= form_for(@feed) do |f| %>
     
<%= feed_error_messages! %>

<ul id="mainTextBoxContainer">

  <li>
    <table>
    <tr>    
      <td>
        <%= f.text_area :feed_text, :class => "textBox", :onclick => 'textCounter(this, "charCounterIta");', :onkeyup => 'textCounter(this, "charCounterIta");', :placeholder => "Scrivi qui il testo del tuo feed ..." %>
      </td>
      <td id="charCounterIta" align="center" style="display: none;"></td>  
    </tr>
    </table>
  </li>
  <li>
    <table>
    <tr>
      <td id="charCounterEng" align="center" style="display: none;"></td>      
      <td>
        <%= f.text_area :feed_text_english, :class => "textBox", :onclick => 'textCounter(this, "charCounterEng");', :onkeyup => 'textCounter(this, "charCounterEng");', :placeholder => "Scrivi qui la versione inglese del feed ..." %>
      </td>
    </tr>
    </table>      
  </li>
  <li>
    Inserisci la data di pubblicazione:</br>
    <%= f.datetime_select :date, :minute_step => 15 %>
  </li>
  <li>
    Inserisci un'immagine:</br>
    <%= f.file_field :feed_image %>
  </li>
  <li>
    <input type="submit" value="Conferma" class="button"/>
  </li>
  
</ul>
  
<% end %>
