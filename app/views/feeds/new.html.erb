
    <title>Nuovo Feed</title>
  </head>
  
  <body>
    
    <div id="menu">
      <div id="logo">
        <a href="<%= @current_host %>"><%= image_tag("logo.png") %></a>
      </div>
      <div id="buttons">
        <ul>
          <li><a href="<%= @current_host %>" id="activeButton" name="Hlink">Home</a></li>
          <li><a href="<%= @current_host %>/profile" name="Hlink">Profilo</a></li>
          <li><a href="<%= edit_user_registration_path %>" name="Hlink">Impostazioni</a></li>
          <li><%= link_to 'Esci', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
    	
    <div class="container">
      
      <div class="groundSheet">
        <div class="homeTitle">
          Nuovo feed
        </div>
      
        <% if notice %>
          <p align="center"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p align="center"><%= alert %></p>
        <% end %>
         
        <%= render 'form' %>
      
        <div class="bubble">
          <%= link_to 'Indietro', :back %>
        </div>
      </div>
    
    </div>
	</body>

</html>
